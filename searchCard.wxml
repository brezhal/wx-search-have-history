<!--pages/index/searchCard/searchCard.wxml-->
<!--搜索栏  -->
<view class='weui-flex wh-padding search-top'>
  <navigator open-type='navigateBack'>返回</navigator>
  <view class='search-container weui-flex'>
    <icon type="search" size='14' />
    <input placeholder='搜索名片(姓名、行业、公司名)' bindinput='bindInput' bindconfirm='setSearchStorage' bindfocus="bindFocus" confirm-type="search" value='{{inputValue}}'></input>
  </view>
</view>

<!--搜索结果  -->
<view class='result-container'>
  <!--历史搜索记录  -->
  <view class='search-history' wx:if="{{StorageFlag}}">
      <!-- <text>搜索记录</text> -->
      <view class='weui-flex' wx:for="{{sercherStorage}}" wx:key="index" data-id="{{index}}" catchtap='tapSercherStorage'>
        <text data-id="{{index}}">{{item}}</text>
        <span class='close' data-id="{{index}}" catchtap="deteleSercherStorage"></span>
      </view>
      <view wx:if='{{sercherStorage.length != 0}}' catchtap='clearSearchStorage'>清除搜索记录</view>
  </view>
  <!--搜索结果  -->
  <view wx:else>
    <!--结果不为空  -->
    <block wx:if="{{maxSize != 0}}">
      <navigator url='/pages/index/checkOther/checkOther?id={{item.id}}' hover-class='none' class='yes-favour-list-item' wx:for="{{resData}}" wx:key="{{index}}">
          搜索结果展示（根据自己的需求修改）
      </navigator>  
      <view class='weui-flex loadmore-container' wx:if="{{maxSize}}">
        <view catchtap='loadMore' wx:if="{{page*size < maxSize}}" class='load-more load-more-border'>点击查看更多搜索记录</view>
        <view class='load-more' wx:else>没有更多了...</view>        
      </view>
  </block>
    <block wx:elif="{{maxSize === false}}"></block>  
  <!-- 结果为空的时候 -->
  <block wx:else>
      <view class='not-footprints'>
        <view><image src='../../img/empty.png'></image></view>
        <view>搜索结果为空哦~</view>
      </view>
  </block>
  </view>
</view>