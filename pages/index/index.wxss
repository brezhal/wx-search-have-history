/*搜索顶部  */
.search-top{
  padding: 20rpx;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  display: flex;
}
.search-top navigator{
  width: 20%;
  text-align: center;
}
.search-container{
  width: 80%;
  background-color: #efefef;
  justify-content: center;
  align-items: center;
  padding:10rpx 10rpx 10rpx 20rpx;
  border-radius: 6rpx;
  display: flex;  
}
.search-container icon{
  margin-right: 10rpx;
}
.search-container input{
  width: 95%;
}
/*搜索记录  */
.search-history{
  background-color: #fff;
  font-size:30rpx;
  width: 100%;
}
.search-history > view{
  /* position: relative; */
  padding:10rpx;
  margin-left: 30rpx;
  border-bottom:1rpx solid #efefef;
  font-size:30rpx;
  width: 90%;
  justify-content: space-between;
  align-items: center;
  display: flex;
  
}
.search-history > view:last-child{
  /* text-align: center;
  margin-left: -30rpx; */
  display: flex;
  width: 90%;
  justify-content: center;
  align-items: center;
}
.search-history > text{
  display: block;
  background-color: #efefef;
  color: rgba(0, 0, 0, 0.6);
  padding: 10rpx 0 10rpx 40rpx;
}
.close{/*关闭按钮*/
  /* background: rgba(246, 245, 243, 1); */
  color:rgba(191, 191, 191, 0.7);
  border-radius:50%;
  line-height:60rpx;
  text-align:center;
  height:60rpx;
  width:60rpx;
  font-size:26rpx;
  /* position:absolute;
  top:0;
  right:30rpx; */
}
.close::before {
    content: "\2716";
}

/*搜索列表  */
 .yes-favour-list-item{
  width:90%;
  transform:translateX(0px);
} 
.result-container{
  position: relative;
}
.result-container > view{
  /* position: absolute; */
  top: 0;
  left: 0;
}
.result-container > view:first-child{
  z-index: 10001;
}
.result-container navigator{
  margin: 24rpx auto;
}
/*搜索为空的时候  */
.not-footprints image{
  width: 200rpx;
  height: 200rpx;
}
.not-footprints{
  text-align: center;
  color: rgba(66, 66, 66, 1);
  margin-top: 100rpx;
  font-size: 32rpx;
}
/*查看更多  */
.load-more{
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  display: inline-block;
  color: rgba(165, 146, 114, 1);
}
.load-more-border{
  border: 1rpx solid rgba(165, 146, 114, 1);
}
.loadmore-container{
  justify-content: center;
  margin-bottom: 50rpx;
}
